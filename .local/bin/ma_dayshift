#!/bin/bash

cd ~/data/rna-seqlyze/src/trac_env/htdocs
now=$(date +%s) begin=$(date -d 2012-04-23 +%s)
TODAY_OFFSET=$(dc -e "5.1216592592 $now $begin - 60 60 24 **/* p")
sed s/@@TODAY_OFFSET@@/$TODAY_OFFSET/ > "Milestones & Activites.svg" \
                                      < "Milestones & Activites_template.svg"
