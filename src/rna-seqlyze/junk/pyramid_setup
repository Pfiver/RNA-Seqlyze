# as seen at http://docs.pylonsproject.org/projects/pyramid/en/1.3-branch/tutorials/wiki2/installation.html

pcreate -s alchemy rna-seqlyze-web

cd rna-seqlyze-web

python setup.py develop --user

python setup.py test -q

easy_install --user nose coverage

nosetests --cover-package=tutorial --cover-erase --with-coverage

initialize_rna-seqlyze-web_db development.ini

pserve development.ini --reload

# Ctrl-Z

bg

man ssh

